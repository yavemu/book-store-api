{
  "name": "book-store-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker build -t bookstore-api .",
    "docker:build:dev": "docker build -t bookstore-api:dev --target dev .",
    "docker:run": "docker run -p 3000:3000 --name bookstore-api-container bookstore-api",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app -v /app/node_modules --name bookstore-api-dev bookstore-api:dev",
    "docker:stop": "docker stop bookstore-api-container || docker stop bookstore-api-dev",
    "docker:clean": "docker rm bookstore-api-container || docker rm bookstore-api-dev",
    "compose:up": "cd .. && docker-compose up -d",
    "compose:up:dev": "cd .. && docker-compose -f docker-compose.dev.yml up -d",
    "compose:down": "cd .. && docker-compose down",
    "compose:down:dev": "cd .. && docker-compose -f docker-compose.dev.yml down",
    "compose:logs": "cd .. && docker-compose logs -f api",
    "compose:logs:dev": "cd .. && docker-compose -f docker-compose.dev.yml logs -f api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@types/node": "^24.3.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
